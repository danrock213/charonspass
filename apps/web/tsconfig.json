{
  "extends": "tsconfig/next.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
